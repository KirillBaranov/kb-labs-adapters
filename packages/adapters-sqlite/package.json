{
  "name": "@kb-labs/adapters-sqlite",
  "version": "0.1.0",
  "description": "SQLite adapter implementing ISQLDatabase interface",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./secure-sql": {
      "import": "./dist/secure-sql.js",
      "types": "./dist/secure-sql.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0"
  },
  "peerDependencies": {
    "@kb-labs/core-platform": "*"
  },
  "devDependencies": {
    "@kb-labs/core-platform": "link:../../../kb-labs-core/packages/core-platform",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^24.3.3",
    "eslint": "^9",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "rimraf": "^6.0.1"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
